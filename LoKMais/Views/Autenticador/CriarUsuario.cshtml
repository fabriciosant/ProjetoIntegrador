@model LoKMais.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Criar Usuario";
}
<div class="card mt-4">
    <div class="card-header box-shadow bg-info">
        <h2 class="text-white font-italic text-center">Área de Cadastro</h2>
    </div>
    <div class="card-body box-shadow border-bottom">
        <p class="text-black-50">Os campos com "<span class="text-danger">*</span>" são obrigatórios!</p>
        <form asp-action="CriarUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4 ui-form-group">
                    <label asp-for="Cpf" class="ui-form-group-label">
                        CPF<span class="text-danger">*</span>
                    </label>
                    <input asp-for="Cpf" type="text" class="ui-form-group-input form-control cpf" required placeholder="Ex.: 000.000.000-00" />
                    <span class="font-italic text-black-50">
                        Digite apenas numeros, sem pontos ou hífen
                    </span>
                </div>
                <div class="col-md-5 ui-form-group">
                    <label asp-for="Email" class="ui-form-group-label">
                        Email<span class="text-danger">*</span>
                    </label>
                    <input asp-for="Email" type="email" class="ui-form-group-input form-control" required placeholder="Ex.: Example@gmail.com" />
                </div>
                <div class="col-md-3 ui-form-group">
                    <label asp-for="Telefone" class="ui-form-group-label">Telefone<span class="text-danger">*</span></label>
                    <input asp-for="Telefone" type="tel" class="ui-form-group-input form-control cel" required placeholder="Ex.: (00) 0 0000-0000" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 ui-form-group">
                    <label asp-for="Senha" class="ui-form-group-label">Senha<span class="text-danger">*</span></label>
                    <input asp-for="Senha" type="password" class="ui-form-group-input form-control" required placeholder="********" />
                    <span class="text-black-50 font-italic">Sua senha de conter letras maiúsculas, minúsculas e números. Ex.: Senha123</span>
                </div>
                <div class="col-md-6 ui-form-group">
                    <label asp-for="ConfirmarSenha" class="ui-form-group-label">Confirmar Senha<span class="text-danger">*</span></label>
                    <input asp-for="ConfirmarSenha" type="password" class="ui-form-group-input form-control" required placeholder="********" />
                </div>
            </div>
            <div class="row m-0 form-group">
                <input type="submit" class="btn btn-secondary font-weight-bold col" value="Continuar" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/meiomask.js"></script>
    <script>
        $(document).ready(function () {
            $('.cpf').setMask('999.999.999-99')
            $('.cel').setMask('(99) 9 9999-9999')
        })
    </script>
}



