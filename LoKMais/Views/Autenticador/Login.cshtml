@model LoKMais.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<div class="container">
    <div class="card card-light-inverse" style="max-width: 28rem; margin: 0 auto">
        <div class="card-body">
            <h1 class="text-center">
                Autenticação
            </h1>
            <form asp-controller="Autenticador" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" autocomplete="false" class="control-label">CPF:</label>
                    <input asp-for="Login" class="form-control" id="cpf" type="text" placeholder="Informe seu CPF">
                </div>
                <div class="form-group">
                    <label for="Senha" autocomplete="new-password" class="control-label">Senha:</label>
                    <input asp-for="Senha" class="form-control" placeholder="Informe sua senha">
                    <span class="font-italic text-black-50 ml-1">Sua senha deve conter letras maiúsculas e minúsculas</span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-raised btn-success col mt-2">Acessar</button>
                </div>
                <div class="row text-center">
                    <div class="form-group col-md-6 px-0">
                        <a asp-action="RecuperarSenha" asp-controller="Autenticador" class="nav-link  text-muted">Esqueceu sua senha?</a>
                    </div>
                    <div class="form-group col-md-6 pr-0">
                        <a asp-action="CriarUsuario" asp-controller="Autenticador" class="nav-link  text-muted">Cadastrar-se</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/meiomask.js"></script>

    <script>
        $(document).ready(function () {
            adicionarMascaras()
        })

        function adicionarMascaras() {
            $('#cpf').setMask('cpf')
        }
    </script>



}

