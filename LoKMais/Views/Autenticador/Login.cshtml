@model LoKMais.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<div class="container my-5">
    <div class="card card-light-inverse" style="max-width: 28rem; margin: 0 auto">
        <div class="card-header bg-info">
            <h3 class="card-title font-italic text-white text-center">Autenticador</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Autenticador" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="ui-form-group my-4">
                    <label asp-for="Login" autocomplete="false" class="ui-form-group-label">CPF</label>
                    <input asp-for="Login" class="ui-form-control-input form-control" id="cpf" type="text" placeholder="Informe seu CPF">
                    <span class="text-muted font-italic">Insira apenas números.</span>
                </div>
                <div class="ui-form-group my-4">
                    <label for="Senha" autocomplete="new-password" class="ui-form-group-label">Senha</label>
                    <input asp-for="Senha" class="ui-form-control-input form-control" placeholder="Informe sua senha">
                    <span class="font-italic text-black-50 ml-1">Sua senha deve conter letras maiúsculas e minúsculas</span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-raised btn-success col mt-2">Acessar</button>
                </div>
                <div class="row">
                    <div class="col-md-6 text-center pr-0">
                        <a href="#" class="nav-link">Esqueceu sua senha?</a>
                    </div>
                    <div class="col-md-6 text-center pr-0">
                        <a asp-action="CriarUsuario" asp-controller="Autenticador" class="ui-nav-link">Criar uma conta</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/meiomask.js"></script>

    <script>
        $(document).ready(function () {
            adicionarMascaras()
        })

        function adicionarMascaras() {
            $('#cpf').setMask('cpf')
        }
    </script>
}

