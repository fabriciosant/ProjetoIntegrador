@model LoKMais.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<div class="container my-4">
    <div class="card card-light-inverse" style="max-width: 28rem; margin: 0 auto">
        <div class="card-header text-center bg-info">
            <h3 class="text-white">Autenticador</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Autenticador" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="ui-form-group">
                    <label asp-for="Login" autocomplete="false" class="ui-form-group-label">CPF</label>
                    <input asp-for="Login" class="ui-form-group-input form-control" id="cpf" type="text" placeholder="Informe seu CPF">
                    <span class="text-black-50 font-italic">Digite apenas números, sem pontos ou hífen.</span>
                </div>
                <div class="ui-form-group mt-5">
                    <label for="Senha" autocomplete="new-password" class="ui-form-group-label">Senha</label>
                    <input asp-for="Senha" id="senha" class="ui-form-group-input form-control" placeholder="Informe sua senha">
                    <span class="font-italic text-black-50 ml-1">Sua senha deve conter letras maiúsculas e minúsculas</span>
                    <p class="text-black-50 mt-2">
                        <input type="checkbox" id="mostrarsenha" onclick="mostrarOcutarSenha()" />
                        <label for="mostrarsenha">Mostar senha</label>
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-raised btn-success col">Acessar</button>
                </div>
                <div class="row text-center">
                    <div class="form-group col-md-6 px-0">
                        <a asp-action="RecuperarSenha" asp-controller="Autenticador" class="nav-link  text-muted">Esqueceu sua senha?</a>
                    </div>
                    <div class="form-group col-md-6 pr-0">
                        <a asp-action="CriarUsuario" asp-controller="Autenticador" class="nav-link  text-muted">Cadastrar-se</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/meiomask.js"></script>

    <script>
        $(document).ready(function () {
            adicionarMascaras()
        })

        function adicionarMascaras() {
            $('#cpf').setMask('cpf')
        }

        function mostrarOcutarSenha() {
            var senha = document.getElementById("senha")
            if (senha.type == "password") {
                senha.type = "text"
            } else {
                senha.type = "password"
            }
        }
    </script>



}

