@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser<Guid>>
@{ 
    ViewData["Title"] = "Lista de Usuarios";
}
<div class="card">
    <div class="card-header">
        <h3 class="text-center font-weight-bold">Lista de usuários</h3>
    </div>
    <div class="card-body">
        <div class="row justify-content-around align-items-center">
            <span class="font-italic">Clique em "Novo usuário" para inserir um novo usuário a lista</span>
            <a asp-action="CriarUsuario" class="btn btn-primary m-3">Novo usuário</a>
        </div>
        <table class="table table-borderless border table-striped text-center">
            <thead>
                <tr class="row m-0">
                    <th class="col-md-3">CPF</th>
                    <th class="col-md-3">E-mail</th>
                    <th class="col-md-3">Bloqueador</th>
                    <th class="col-md-3">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr class="row m-0 align-items-center">
                        <td class="col-md-3">
                            @(new CPF(usuario.UserName).ComFormatacao())
                        </td>
                        <td class="col-md-3">
                            @usuario.Email
                        </td>
                        <td class="col-md-3">
                            @{bool validar = usuario.LockoutEnd != null;}
                            @Html.DisplayFor(modelItem => validar)
                        </td>
                        <td class="col-md-3">
                            <a asp-controller="Autenticador" asp-action="AlterarSenha" asp-route-cpf="@usuario.UserName" class="btn btn-info">Alterar Senha</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
