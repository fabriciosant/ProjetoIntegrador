@model LoKMais.Models.Entities.Veiculo

@{
    ViewData["Title"] = "Detalhes";
}
<div class="card my-4  mx-1">
    <div class="col-md bg-info">
        <a asp-controller="Usuario" asp-action="ListaDeUsuarios"><i class="fa fa-arrow-circle-left fa-2x text-info"></i></a>
    </div>
    <div class="card-header">
        <img class="card-img-top" src="/Home/AbrirArquivo?veiculoId=@Html.DisplayFor(model=> model.Id)" />
    </div>
    <table class="table  table-borderless border table-striped text-center">
        <thead>
            <tr class="row m-0 text-black-50">
                <th class="col-md-1">Modelo</th>
                <th class="col-md-2">Marca</th>
                <th class="col-md-2">Categoria</th>
                <th class="col-md-1">Placa</th>
                <th class="col-md-1">Ano</th>
                <th class="col-md-2">Combustivel</th>
                <th class="col-md-1">Cor</th>
                <th class="col-md-2">Descrição</th>
            </tr>
        </thead>
        <tbody>
            <tr class="row m-0 align-items-center">
                <td class="col-md-1">@Html.DisplayFor(model => model.Modelo)</td>
                <td class="col-md-2">@Html.DisplayFor(model => model.Marca)</td>
                <td class="col-md-2">@Html.DisplayFor(model => model.Categoria)</td>
                <td class="col-md-1">@Html.DisplayFor(model => model.Placa)</td>
                <td class="col-md-1">@Html.DisplayFor(model => model.Ano)</td>
                <td class="col-md-2">@Html.DisplayFor(model => model.TipoCombustivel)</td>
                <td class="col-md-1">@Html.DisplayFor(model => model.Cor) </td>
                <td class="col-md-2">@Html.DisplayFor(model => model.Descricao)</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
        <a asp-controller="" asp-action="" class="btn btn-success pl-5 pr-5">Alugar</a>
    </div>
</div>

